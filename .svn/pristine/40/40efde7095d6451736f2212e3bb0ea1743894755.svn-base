html,body{height:100%;}
body{}
.login_main{width:530px;height:336px;background:url('../images/login_back.png') center center no-repeat;position:absolute;left:50%;top:50%;margin-left:-265px;margin-top:-168px;box-shadow: 2px 2px 5px #bbb;}
.login_main form{padding:50px;}
.error_tip{margin:3px 0;height:24px;line-height:24px;color:#D70000;padding-left:26px;background:url('../images/error_ico.png') left center no-repeat;display:none;}
.login_title{height:80px;line-height:80px;padding-left:120px;background:url('../images/logo.jpg') left center no-repeat;font-size:24px;color:#3981B4;}
.login_area{overflow:hidden;zoom:1;}
.input_area{margin-right:120px;}
.submit_area{float:right;margin-top:10px;}
.form_text_box{
	margin:10px 0;
	border:1px solid #D8D0CE;
	height:40px;
	padding-left:32px;
	background-color:#fff;
	background-position:5px center;
	background-repeat:no-repeat;
	border-radius:5px;
	overflow:hidden;
}
.form_text{
	color:#aaa;
	border:none;
	border:0;
	width:100%;
	_width:auto;
	height:30px;
	height:26px\9;
	line-height:22px;
	line-height:26px\9;
	padding:5px 0;
	font-size:14px;
}
.admin_name{background-image:url('../images/username_ico.png');}
.admin_pwd{background-image:url('../images/password_ico.png');}

.login_cookie{margin:5px 0;height:20px;line-height:20px;}
.login_cookie input{vertical-align:top;}

.submit_button{
	display:block;
	width:105px;
	height:95px;
	background:url('../images/login_button.png') no-repeat;;
	color:#fff;
	font-weight:bold;
	border-radius:5px;
	-moz-border-radius:5px;
	-webkit-border-radius:5px;
	text-align:center;
	cursor:pointer;
    border:0;
	outline:none;
}